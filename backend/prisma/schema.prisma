generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String       @id
  title       String
  description String?
  price       Int
  Enrollment  Enrollment[]
  Section     Section[]
}

model Enrollment {
  id        String   @id
  userId    String
  courseId  String
  startDate DateTime @default(now())
  endDate   DateTime
  isActive  Boolean  @default(true)
  Course    Course   @relation(fields: [courseId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}

model PDFResource {
  id            String  @id
  title         String
  cloudinaryUrl String
  sectionId     String
  Section       Section @relation(fields: [sectionId], references: [id])
}

model Section {
  id          String        @id
  title       String
  courseId    String
  PDFResource PDFResource[]
  Course      Course        @relation(fields: [courseId], references: [id])
  Test        Test?
  Video       Video[]
}

model Test {
  id        String  @id
  title     String
  questions String
  sectionId String  @unique
  Section   Section @relation(fields: [sectionId], references: [id])
}

model User {
  id         String       @id
  clerkId    String       @unique
  firstName  String
  lastName   String
  email      String       @unique
  role       UserRole     @default(USER)
  Enrollment Enrollment[]
}

model Video {
  id            String  @id
  title         String
  cloudinaryUrl String
  sectionId     String
  Section       Section @relation(fields: [sectionId], references: [id])
}

enum UserRole {
  ADMIN
  USER
}
