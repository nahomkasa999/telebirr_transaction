generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String        @id
  title       String
  description String?
  price       Int
  Enrollment  Enrollment[]
  Section     Section[]
  Transaction Transaction[] // back-reference to see what transactions unlocked this
}

model Enrollment {
  id        String   @id
  userId    String
  courseId  String
  startDate DateTime @default(now())
  endDate   DateTime
  isActive  Boolean  @default(true)
  Course    Course   @relation(fields: [courseId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}

model PDFResource {
  id            String  @id
  title         String
  cloudinaryUrl String
  sectionId     String
  Section       Section @relation(fields: [sectionId], references: [id])
}

model Section {
  id          String        @id
  title       String
  courseId    String
  PDFResource PDFResource[]
  Course      Course        @relation(fields: [courseId], references: [id])
  Test        Test?
  Video       Video[]
}

model Test {
  id        String  @id
  title     String
  questions String
  sectionId String  @unique
  Section   Section @relation(fields: [sectionId], references: [id])
}

model User {
  id          String        @id
  clerkId     String        @unique
  firstName   String
  lastName    String
  email       String        @unique
  role        UserRole      @default(USER)
  Enrollment  Enrollment[]
  Transaction Transaction[] // see which transactions this user used
}

model Video {
  id            String  @id
  title         String
  cloudinaryUrl String
  sectionId     String
  Section       Section @relation(fields: [sectionId], references: [id])
}

model Transaction {
  id                String   @id @default(uuid())
  transactionId     String   @unique
  transactionAmount Int
  used              Boolean  @default(false)
  usedById          String? // user who used this (nullable if unused)
  courseId          String? // course unlocked by this (nullable if unused)
  usedBy            User?    @relation(fields: [usedById], references: [id])
  course            Course?  @relation(fields: [courseId], references: [id])
  createdAt         DateTime @default(now())
}

enum UserRole {
  ADMIN
  USER
}
